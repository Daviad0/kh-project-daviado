<div style="display: table;height: 30vh;width:100%;background-color:#2F3061">
    <div style="display: table-cell; vertical-align: middle;">
        <h1 style="text-align: center;color:#f5faff;font-weight:bold"><a style="color: #f5faff;" href="/login">Login</a> or Register</h1>
    </div>
</div>
<br/>
<div style="text-align: center;">
    
    <input type="text" placeholder="Full Name" id="fullname" class="form-input" style="display: inline-block;margin:5px"/>
    <input type="text" placeholder="Username" id="username" class="form-input" style="display: inline-block;margin:5px"/>
    <input type="password" placeholder="Password" id="password" class="form-input" style="display: inline-block;margin:5px"/>
    <a style="cursor:pointer;" id="login" value="Register" class="button-dark" style="display: inline-block;margin:5px;font-size:15px">Register</a>
    <br/>
    <span id="errorMessage" style="color:red;opacity:0%;margin:10px">We're sorry, we had trouble registering your account!</span>
</div>
<script>
    $("#login").click(function(e){
        $('#errorMessage').animate({opacity: 0}, 300);
        $.ajax({
          type: "POST",
          url: "/api/register",
          data: {username: $("#username").val(), password: $("#password").val(), fullName: $("#fullname").val()},
          dataType: 'json',
          success: function(result){
              console.log(result)
              if(result.success){
                $('#errorMessage').animate({opacity: 0}, 300);
                location.replace('/')
              }else{
                $('#errorMessage').animate({opacity: 1}, 300);
              }
              
          }
        });
      })
</script>